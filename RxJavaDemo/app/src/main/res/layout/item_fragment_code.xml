<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        card_view:cardElevation="4dp"
        card_view:cardCornerRadius="8dp"
        android:layout_margin="@dimen/y6"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y34">

    <RelativeLayout
        android:layout_margin="@dimen/y4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <ImageView
        android:id="@+id/item_codelogo"
        android:src="@mipmap/ic_launcher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_marginLeft="@dimen/x10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <TextView
        android:id="@+id/item_codetext"
        android:text="uiitem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/y12"/>

    <TextView
        android:text="s121123123"
        android:textSize="@dimen/y6"
        android:id="@+id/item_codetime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    </LinearLayout>
    </LinearLayout>
    <ImageView
        android:layout_marginRight="@dimen/y6"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    </RelativeLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>