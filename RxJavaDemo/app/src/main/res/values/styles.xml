<resources>


    <style name="SwipeBackLayout">
        <item name="edge_size">50dip</item>
        <item name="shadow_left">@mipmap/shadow_left</item>
        <item name="shadow_right">@mipmap/shadow_right</item>
        <item name="shadow_bottom">@mipmap/shadow_bottom</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">#FA7199</item>
        <item name="colorAccent">@color/colorAccent</item>


    </style>

    <style name="SwipeBack" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- 侧滑返回所必须的样式，否则下层Activity黑屏 -->
        <item name="android:windowIsTranslucent">true</item>
    </style>



    <!--自定义系统style-->
    <style name="AppTheme.Base" parent="Theme.AppCompat.Light">
        <item name="android:windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimaryDark">@color/colorStatusLayout</item>
    </style>

    <style name="AppTheme.Base.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.Base.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />




</resources>
